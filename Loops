//INPUT 5 NUMBERS AND PRINT SUM OF ONLY ODD NUMBERS#include<stdio.h>
int main (){
int numbers[5],i,sum=0;



for(i=0;i<5;i++){
    printf("Enter Number %d : ",i);
    scanf("%d", &numbers[i]);
}


for(i=0;i<5;i++){
    
    if(numbers[i]%2 !=0){
        
        sum= sum+numbers[i];
        
    }
}
    
    printf("Sum of all odd numbers entered= %d", sum);
    
    



}
