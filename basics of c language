//PRINT SUM,PROFUCT,REMAINDER OF TWO NUMBERS 

#include<stdio.h>    
int main(){  

int x,y;  
printf("enter first number ");  
scanf("%d",&x);  
printf("enter second number ");  
scanf("%d",&y);    
printf("sum of 2 numbers:%d\n ",x+y);  
printf("product : %d\n",x*y);
printf("remainder: %f\n",x%y);

}    

