//TAKING INPUT AND PRINTING IT 
#include<stdio.h>
int main(){
int a;  
float b;
scanf("%d",&a);                //scanf is used to take an input from user 
printf("you entered %d\n", a); // \n is used to print in next line 
scanf("%f",&b);
printf("you entered %f\n", b);
}

