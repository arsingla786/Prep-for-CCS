//USE OF IF-ELSE 
//DETERMINE EVEN OR ODD
#include<stdio.h>
int main(){
int n;
printf("enter n ");
scanf("%d",&n);
if(n%2==0){
printf("EVEN");
}
else 
printf("ODD");
}
