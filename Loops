//PRINT ALL EVEN NUMBERS BETWEEN m AND n
#include<stdio.h>
int main (){
    int n,m,i;
    printf("enter m ");
    scanf("%d",&m);
    printf("enter n ");
    scanf("%d",&n);
    
    for(i=m;i<=n;i++){
        if(i%2==0){
            printf("%d\n",i);
        }
    }
    

}
