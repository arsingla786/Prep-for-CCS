Q//FIND AREA AND PERIMETER OF CIRCLE 
#include <stdio.h>

int main()
{
    int radius;
    printf("enter radius :");
    scanf("%d",&radius);
    
    float pie=3.14;
    printf("\nArea of circle = %f",pie*radius*radius);
    printf("\nPerimeter of circle= %f ",2*pie*radius);
    
}
