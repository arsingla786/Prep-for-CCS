Q//AVERAGE OF TWO NUMBERS
#include <stdio.h>

int main()
{
    int a,b;
    printf("enter two numbers :");
    scanf("%d,%d",&a,&b);
    
    printf("average of two numbers = %f", (a+b)/2.00);    
}
