//PROGRAM TO CHECK FAIL OR PASS 
#inclue<stdio.h>
int main(){
int marks;
printf("Enter marks out of hundred :");
scanf("%d",&marks);
if(marks<0||marks>100){
printf("invalid");
}
else if(marks>=33){
printf("PASS");
else
printf("FAIL");
}
